<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="logaligroup.invoices.controller.HelloPanel" displayBlock="true" xmlns:core="sap.ui.core">
    <Panel headerText="{i18n>helloPanel}">
        <content>
            <Button icon="sap-icon://action" text="{i18n>helloDialogBut}" press=".showDialog" class="sapUiSmallMarginEnd" />
            <Button text="{i18n>showHello}" press=".onShowHello" class="sapUiSmallMarginEnd" />
            <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
            <Text text="{/recipient/name}" class="sapUiSmallMargin boldElemment"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.invoices.view.fragments.Form01" type="XML"/>
</mvc:View>
